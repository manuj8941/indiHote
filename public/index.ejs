<% layout("boilerplate.ejs")  %>


<h1>All Hotels</h1>
<div><a class="btn btn-info btn-lg col-3 offset-5 my-3" href="/hotels/new">âž• Add A New Hotel</a></div>




<% hotels.forEach((hotel) => { %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= hotel.imageURL %>" class="img-fluid">
            


        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="class"> <%= hotel.title %></h5>
                <p class="card-text"><%= hotel.description %> </p>
                <p class="card-text"><small class="text-muted"><%= hotel.location %></small></p>
                <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">View Hotel</a>
            </div>
        </div>
    </div>
</div>


<% }) %>