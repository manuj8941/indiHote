<% layout("layouts/boilerplate.ejs")  %>




<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">



            
            <img src="<%= hotel.imageURL %>" class="card-img-top"> 

            <div class="card-body">
                <h5 class="card-title"><%= hotel.title%></h5>
                <p class="card-text"><%= hotel.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= hotel.location%></li>
                <li class="list-group-item"> ₹ <%= hotel.price%> / night</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-warning" href="/hotels/<%= hotel._id %>/edit">📝Edit</a>
                <a class="btn btn-danger" href="/hotels/<%= hotel._id %>/delete">🗑️Delete</a>
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-dark btn-lg col-8 offset-2" href="/hotels">🔙Back To All Hotels</a>
            </div>
        </div>
    </div>
</div>
